<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lawnmower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#666699</item>
        <item name="colorPrimaryVariant">#666699</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name = "SpecialText">
        <item name = "android:textSize">30sp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:textAllCaps">true</item>
    </style>
    <style name = "EditText">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:padding">12sp</item>
        <item name = "android:inputType">numberDecimal</item>
    </style>
</resources>